# Zeabur Deployment Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# Next.js Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Application Configuration
NEXT_PUBLIC_APP_URL=https://novagraph.com.tr

# Custom Domain Configuration
NEXT_PUBLIC_DOMAIN=novagraph.com.tr
NEXT_PUBLIC_SITE_URL=https://novagraph.com.tr

# Vercel Integration
EXAMPLE_NAME=I9JU23NF394R6HH

# Database (if needed)
# DATABASE_URL=your-database-url

# External Services (if needed)
# GOOGLE_ANALYTICS_ID=your-ga-id
# GOOGLE_SITE_VERIFICATION=your-verification-code

# Security
# JWT_SECRET=your-jwt-secret
# ENCRYPTION_KEY=your-encryption-key

# Email Configuration
MAIL_USER=info@novagraph.com.tr
MAIL_PASS=your-smtp-password-here
MAIL_HOST=mail.novagraph.com.tr
MAIL_PORT=587
MAIL_SECURE=false

# Alternative SMTP Configuration (if using Gmail or other providers)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_SECURE=false
